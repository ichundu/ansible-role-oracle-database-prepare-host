# {{ ansible_managed }}
# Setting oracle OS user limits as per Oracle recommendation

oracle    soft    nofile    1024
oracle    hard    nofile    65536
oracle    soft    nproc     16384
oracle    hard    nproc     16384
oracle    soft    stack     10240
oracle    hard    stack     32768
{% if oradb_limits_hard_memlock is defined and (oradb_limits_hard_memlock | int) > 0 %}
oracle    hard    memlock   {{ oradb_limits_hard_memlock }}
{% endif %}
{% if oradb_limits_soft_memlock is defined and (oradb_limits_soft_memlock | int) > 0 %}
oracle    soft    memlock   {{ oradb_limits_soft_memlock }}
{% endif %}
